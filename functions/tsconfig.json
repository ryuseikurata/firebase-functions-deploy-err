{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
    ],
    "target": "es2018",
    "lib": [
      "es2018",
      "DOM"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
}
